<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>

  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <p><%= book.title %><br>
      <%= book.author %><br>
      <%= link_to 'Show', book %><br>
      <%= link_to 'Edit', edit_book_path(book) %><br>
      <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %><br></p>
    <% end %>
  </tbody>

</table>
