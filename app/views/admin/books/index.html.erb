<p id="notice"><%= notice %></p>

<h1>Books in stock</h1>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>Book</th>
      <th>Author</th>
      <th>Price</th>
      <th>More info</th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', books_path(book.id) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
  <%= link_to 'Add new book', new_book_path %>

</table>
